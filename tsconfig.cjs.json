{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "outDir": "lib/cjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "incremental": true,

    "declaration": true,

    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES5",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
